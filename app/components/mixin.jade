mixin head(title, description, keywords, description_social, image_social, url_social, type_social)
  title #{title}
  meta(name="description", content="#{description}")
  meta(name="keywords", content="#{keywords}")
  meta(property="og:title" content="#{title}")
  if typeof(description_social) !== 'undefined' && description_social != ""
    meta(property="og:description" content="#{description_social}")
  if typeof(image_social) !== 'undefined' && image_social != ""
    meta(property="og:image" content="#{image_social}")
  if typeof(url_social) !== 'undefined' && url_social != ""
    meta(property="og:url" content="#{url_social}")
  if typeof(type_social) !== 'undefined' && type_social != ""
    meta(property="og:type" content="#{type_social}")
  else
    meta(property="og:type" content="website")

mixin menu(link, title, current)
  if current != ""
    li(class="#{current}")
      a(href="#{link}", title="#{title}") !{title}
  else
    li
      a(href="#{link}", title="#{title}") !{title}

mixin menu-link(link, title, current)
  if current != ""
    li
      a(href="#{link}", title="#{title}", class="#{current}") !{title}
  else
    li
      a(href="#{link}", title="#{title}") !{title}

mixin social-item(link, title, icon)
  li
    a(class="#{icon}", href="#{link}", title="#{title}") #{title}

mixin social-text(link, title, icon)
  li
    a(href="#{link}", title="#{title}")
      i.fa(class="#{icon}")
      | #{title}

mixin solution-item(src, title, summary)
  .col-xs-12.col-sm-6
    .solution-item
      h3.solution-title #{title}
      p.solution-summary(data-mh="solution") !{summary}
      figure.solution-media
        img(src="#{src}", width="746", height="464", alt="#{title}")

mixin feature-item(src, summary)
  .col-xs-12.col-sm-4
    .feature-item(data-mh="feature")
      figure.feature-media
        img(src="#{src}", width="52", height="52", alt="#{summary}")
      p.feature-summary !{summary}

mixin service-item(src, summary)
  .col-xs-12.col-sm-6
    .service-item(data-mh="service")
      figure.service-media
        img(src="#{src}", width="146", height="146", alt="#{summary}")
      p.service-summary !{summary}

mixin promotion-item(order, title)
  .promotion-item
    .promotion-order #{order}
    .promotion-title !{title}

mixin video-item(link, title)
  .video-item
    a.owl-video(href="#{link}")
    .video-title
      .video-table
        .video-cell #{title}
